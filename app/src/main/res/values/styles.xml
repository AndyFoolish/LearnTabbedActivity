<resources>

    <!-- Base application theme. -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo">
        <!-- 启用叠加模式(Overlay Mode) -->
        <item name="android:windowActionBarOverlay">true</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- 设置actionbar的按钮文字的颜色-->
        <item name="android:actionMenuTextColor">#ff0000</item>
        <!-- Action bar tabs-->
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <!-- ActionBar 样式 -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <!-- actionbar的背景颜色-->
        <item name="android:background">#66005e2f</item>

        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar 标题文本的颜色 -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#eeaaaa</item>
    </style>

    <!-- ActionBar tabs 标签样式 -->
    <style name="MyActionBarTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- 标签指示器 -->
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <!-- ActionBar Tab标签 文本样式 -->
    <style name="MyActionBarTabText"
        parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#e69138</item>
    </style>

</resources>
